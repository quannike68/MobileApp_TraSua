@model WebAPI_trasua.Models.danhmuc_sp

@{
    ViewBag.Title = "Delete";
}

<h2>Xóa danh mục</h2>

<h3>Bạn có chắc chắn muốn xóa danh mục này không?</h3>
<div>
  
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Id:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.iddm)
        </dd>
        <dt>
            Tên danh mục:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tendm)
        </dd>

        <dt>
            Hình ảnh:
        </dt>

        <dd>
            <img src="@Model.hinhanh" width="100" height="100" />
        </dd>

        <dt>
            Ghi chú:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ghichu)
        </dd>

    </dl>
  

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
