@model IEnumerable<WebAPI_trasua.Models.san_pham>
  
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID Sản phẩm
        </th>
        <th>
            ID Danh mục
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Giá tiền
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Ghi chú
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idsp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.iddm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tensp)
            </td>
            <td>
                @string.Format("{0:#,##0}", int.Parse(item.giatien)) Đ
            </td>
            <td>
                <img src="@item.hinhanh" width="100" height="100"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ghichu)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idsp }) |
                @Html.ActionLink("Details", "Details", new { id = item.idsp }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.idsp })
            </td>
        </tr>
    }

</table>
