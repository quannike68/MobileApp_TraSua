@model WebAPI_trasua.Models.san_pham

@{
    ViewBag.Title = "Delete";
}

<h2>Xóa sản phẩm</h2>

<h3>Bạn có chắc chắn muốn xóa danh mục này không?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Id Sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.idsp)
        </dd>
        <dt>
            Id Danh mục
        </dt>

        <dd>
            @Html.DisplayFor(model => model.iddm)
        </dd>

        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tensp)
        </dd>

        <dt>
            Giá tiền
        </dt>

        <dd>
            @string.Format("{0:#,##0}", int.Parse(Model.giatien)) Đ
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            <img src="@Model.hinhanh" width="100" height="100" />

        </dd>

        <dt>
            Ghi chú
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ghichu)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
